name: Deploy VitePress site to Remote Server

on:
  push:
    branches: [main]
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 22
          cache: npm

      - name: Install dependencies
        run: npm ci

      - name: Build VitePress site
        run: npm run docs:build

      - name: Save SSH private key
        run: |
          mkdir -p ~/.ssh
          echo "${{ secrets.SSH_PRIVATE_KEY }}" > ~/.ssh/id_rsa
          chmod 600 ~/.ssh/id_rsa

      - name: Add remote server to known_hosts
        run: |
          mkdir -p ~/.ssh
          ssh-keyscan -p 22 115.231.176.242 >> ~/.ssh/known_hosts

      - name: Clean remote directory
        run: |
          ssh -i ~/.ssh/id_rsa -o StrictHostKeyChecking=no -p 22 root@115.231.176.242 "rm -rf /www/wwwroot/linking-et/* && mkdir -p /www/wwwroot/linking-et"

      - name: Upload built site with rsync
        run: |
          rsync -avz --delete -e "ssh -i ~/.ssh/id_rsa -o StrictHostKeyChecking=no -p 22" ./docs/.vitepress/dist/ root@115.231.176.242:/www/wwwroot/linking-et/

      - name: Fix ownership and permissions on remote server
        run: |
          ssh -i ~/.ssh/id_rsa -o StrictHostKeyChecking=no -p 22 root@115.231.176.242 "
            chown -R www-data:www-data /www/wwwroot/linking-et
            chmod -R 755 /www/wwwroot/linking-et
          "